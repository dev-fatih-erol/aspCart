@model IEnumerable<ProductModel>
@{
    int i = 0;
    var cssClass = new CssClassHelper();
}
<div class="mb-6">
    <div class="d-flex justify-content-between align-items-center border-bottom border-color-1 flex-lg-nowrap flex-wrap border-md-down-top-0 border-sm-bottom-0 mb-4">
        <h3 class="section-title section-title__full mb-0 pb-2 font-size-22">Size Özel Tavsiyeler</h3>
        <a class="d-block text-gray-16 border-top border-color-1 border-md-top-0 w-100 w-md-auto pt-2 pt-md-0" href="../shop/product-categories-7-column-full-width.html">Tüm Tavsiyeleri Gör <i class="ec ec-arrow-right-categproes"></i></a>
    </div>
    <ul class="row list-unstyled products-group no-gutters">
        @foreach (var product in Model)
        {
            <li class="col-6 col-md-3 col-xl-2gdot4-only col-wd-2 product-item @cssClass.GetType3(i)">
                <div class="product-item__outer h-100">
                    <div class="product-item__inner px-xl-4 p-3">
                        <div class="product-item__body pb-xl-2">
                            <div class="mb-2"><a asp-route-category="@product.Categories.First().SeoUrl" asp-action="ProductCategory" asp-controller="Home" class="font-size-12 text-gray-5">@product.Categories.First().Name</a></div>
                            <h5 class="mb-1 product-item__title"><a asp-route-seo="@product.SeoUrl" asp-action="ProductInfo" asp-controller="Home" class="text-blue font-weight-bold">@product.Name</a></h5>
                            <div class="mb-2">
                                <a asp-route-seo="@product.SeoUrl" asp-action="ProductInfo" asp-controller="Home" class="d-block text-center"><img class="img-fluid" src="../../assets/img/212X200/img1.jpg" alt="@product.Name"></a>
                            </div>
                            <div class="flex-center-between mb-1">
                                <div class="prodcut-price @((product.OldPrice > 0) ? "d-flex align-items-center position-relative": "")">
                                    @if (product.OldPrice > 0)
                                    {
                                        <ins class="font-size-20 text-red text-decoration-none">@Html.Raw(product.Price.ToString("N2")) TL</ins>
                                        <del class="font-size-12 text-gray-6 position-absolute bottom-100">@product.OldPrice.ToString("N2") TL</del>
                                    }
                                    else
                                    {
                                        <div class="text-gray-100">@product.Price.ToString("N2") TL</div>
                                    }
                                </div>
                                <div class="d-none d-xl-block prodcut-add-cart">
                                    <a href="../shop/single-product-fullwidth.html" class="btn-add-cart btn-primary transition-3d-hover"><i class="ec ec-add-to-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
            i++;
        }
    </ul>
</div>