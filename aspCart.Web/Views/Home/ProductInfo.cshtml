                                    if (DateTime.Today.DayOfWeek == DayOfWeek.Friday)
                                    {
                                        <p><strong>Kargo Bilgisi</strong>: En geç <strong>@DateTime.Now.AddDays(3).ToString("dd MMMM dddd")</strong> günü Kargoda</p>
                                    }
                                    else
                                    {
                                        <p><strong>Kargo Bilgisi</strong>: En geç <strong>@DateTime.Now.AddDays(1).ToString("dd MMMM dddd")</strong> günü Kargoda</p>
                                    }
                                }
                            }
