                $.ajax({
                    type: 'GET',
                    url: '/home/productreview/@Model.Id',
                    dataType: 'Json',
                    success: function (data) {
                        $('#review-container').empty(); // remove existing dom

                        let one = 0, two = 0, three = 0, four = 0, five = 0;

                        if (data.length > 0) {
                            $.each(data, function (i, item) {
                                let review = template;
                                review = review.replace('_user_placeholder', item.username);
                                review = review.replace('_date_placeholder', item.createdOn);
                                review = review.replace('_star_placeholder', createStar(item.rating));
                                review = review.replace('_title_placeholder', item.title);
                                review = review.replace('_message_placeholder', item.message);
                                if (item.dateModified !== '01 Ocak 0001')
                                    review = review.replace('_date_modified_placeholder', '<div class=\"mb-2\"><strong>Son Düzenleme:</strong><span class=\"font-size-13 text-gray-23\" style="margin-left:5px;">' + item.dateModified + '</span></div>');
                                else
                                    review = review.replace('_date_modified_placeholder', '');
                                if (item.isVerifiedOwner)
                                    review = review.replace('_verified_placeholder', '<span class="text-green" style="margin-right: 2px;"><i class ="fas fa-check"></i></span> Satın aldığı doğrulandı');
                                else
                                    review = review.replace('_verified_placeholder', '<span class="text-red" style="margin-right: 2px;"><i class ="fas fa-times"></i></span> Satın aldığı doğrulanmadı');
                                switch (item.rating) {
                                    case 1: one++; break;
                                    case 2: two++; break;
                                    case 3: three++; break;
                                    case 4: four++; break;
                                    case 5: five++; break;
                                }
                                $('#review-container').append(review);
                                $('.review-uniq')
                                    .last()
                                    .removeClass("border-bottom")
                                    .removeClass("border-color-1");
                            });
