                        <p><strong>Teslimat Bilgisi</strong>: @((Model.Price >= 250) ? "Kargo Bedava" : "250 TL ve üzeri Kargo Bedava")</p>
                        @{
                            if (DateTime.Today.DayOfWeek == DayOfWeek.Saturday)
                            {
                                <p><strong>Kargo Bilgisi</strong>: En geç <strong>@DateTime.Now.AddDays(2).ToString("dd MMMM dddd")</strong> günü Kargoda</p>
                            }
                            else if (DateTime.Today.DayOfWeek == DayOfWeek.Sunday)
                            {
                                <p><strong>Kargo Bilgisi</strong>: En geç <strong>@DateTime.Now.AddDays(1).ToString("dd MMMM dddd")</strong> günü Kargoda</p>
                            }
                            else
                            {
                                var startTime = new TimeSpan(0, 0, 0);
                                var endTime = new TimeSpan(15, 0, 0);
                                var currentTime = DateTime.Now.TimeOfDay;
                                if ((currentTime >= startTime) && (currentTime <= endTime))
                                {
                                    <p><strong>Kargo Bilgisi</strong>: Siparişinizi <strong>@timeSpan.GetRemainingTime(currentTime, endTime)</strong> içinde verirseniz bugün kargoda</p>
                                }
